{
  "manifest_version": 3,
  "name": "ChatGPT Conversation Exporter",
  "version": "1.0.0",
  "description": "Bulk export all ChatGPT conversations to JSON",

  "permissions": [
    "downloads",
    "scripting",
    "activeTab",
    "tabs"
  ],

  "host_permissions": [
    "https://chatgpt.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "ChatGPT Exporter",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
